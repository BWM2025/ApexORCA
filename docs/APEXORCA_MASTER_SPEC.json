{
  "$schema": "https://apexorca.io/schemas/master-spec-v1.json",
  "version": "1.0",
  "updated": "2026-02-24",
  "operator": {
    "name": "ApexORCA.io",
    "jurisdiction": "Toronto, Ontario, Canada",
    "offerings": "Global (digital products — ORCA personas and skills for OpenClaw)"
  },
  "legal": {
    "copyright": {
      "statement": "© 2026 ApexORCA.io. All rights reserved. Founder: B.W. Moore",
      "footer": true,
      "license_file": true,
      "year": "2026"
    },
    "trademark": {
      "ApexORCA": "use_consistently_tm_until_registered",
      "ORCA_Governance_DNA": "used_with_tm",
      "third_party_names": "comparison_only_no_affiliation"
    },
    "disclaimers": {
      "general": true,
      "jurisdiction": true,
      "ai_automation": "recommend_in_terms",
      "limitation_of_liability": "requires_terms"
    },
    "gaps": [
      "terms_of_service_missing",
      "privacy_policy_missing"
    ]
  },
  "compliance": {
    "frameworks": [
      { "id": "PIPEDA", "applies": true, "notes": "Primary; we collect email + purchase data" },
      { "id": "Ontario_provincial", "applies": true, "notes": "Consumer protection, contract law" },
      { "id": "GDPR", "applies": "if_eu_customers", "notes": "Lawful basis, rights, notice" },
      { "id": "CCPA_CPRA", "applies": "if_california_users", "notes": "Disclosure and rights" },
      { "id": "PCI_DSS", "applies": "delegated_to_stripe", "notes": "No card storage" },
      { "id": "WCAG", "applies": false, "notes": "Optional" }
    ],
    "data_processing_source": "apps/web/lib/compliance.ts",
    "personal_data": [
      { "item": "email", "stored_in": "Supabase purchases.user_email", "purpose": "fulfillment, support, legal" },
      { "item": "purchase_records", "stored_in": "Supabase purchases", "purpose": "order history, support, legal/tax" }
    ],
    "not_collected": ["payment_card_numbers", "passwords", "sensitive_categories_for_processing"],
    "third_parties": ["Stripe", "Supabase", "hosting_provider"],
    "in_code": {
      "card_data_stored": false,
      "data_processing_defined": true,
      "privacy_page": false,
      "terms_page": false,
      "retention_implemented": false,
      "user_rights_flow": false
    },
    "gaps": [
      "add_privacy_page_and_link",
      "add_terms_page_and_link",
      "define_retention_in_privacy",
      "provide_contact_for_access_erasure"
    ]
  },
  "security": {
    "openclaw": {
      "apexorca_relationship": "sells_content_only_does_not_run_openclaw",
      "cve_2026_25253": {
        "description": "One-click RCE via WebSocket hijacking; token exfiltration via gatewayUrl",
        "cvss": 8.8,
        "patched_in": "2026.1.29",
        "patched_date": "2026-01-29"
      },
      "other_issues": [
        "credentials_plaintext",
        "auth_disabled_by_default",
        "malicious_skills_on_clawhub"
      ],
      "customer_recommendations": [
        "Use OpenClaw v2026.1.29 or later",
        "Enable authentication; do not expose gateway publicly unless hardened",
        "Install skills only from trusted sources",
        "Rotate gateway and API keys after suspected compromise"
      ],
      "apexorca_exposure": "not_liable_for_openclaw_code_or_deployment"
    },
    "codebase": {
      "stripe_webhook": { "signature_verified": true, "note": "STRIPE_WEBHOOK_SECRET" },
      "purchase_recording": { "only_via_webhook": true, "legacy_api_purchases_removed": true },
      "checkout": { "product_id_validated": true, "allowlist": "getProduct(productId)" },
      "dashboard_api": { "auth": "none", "note": "intentional_transparency_or_protect_if_not" },
      "monitor_api": { "auth": "none", "sensitive_data": false },
      "secrets": { "in_repo": false, "via_env": true },
      "input_validation": { "checkout": "productId type and allowlist", "webhook": "Stripe payload only" },
      "recommendations": [
        "Add auth or restrict dashboard if not public",
        "Ensure STRIPE_WEBHOOK_SECRET in production",
        "Consider rate limiting on checkout and webhook"
      ]
    }
  },
  "scale_and_load": {
    "architecture": {
      "frontend_api": "Next.js App Router (e.g. Vercel serverless)",
      "payments": "Stripe Checkout + webhooks",
      "data": "Supabase (PostgreSQL)"
    },
    "limits": {
      "vercel_pro_hobby": "~30k concurrent; burst ~1k per 10s per region",
      "vercel_enterprise": "100k+ concurrent",
      "supabase": "plan-dependent connections and storage",
      "stripe": "high; not typical bottleneck"
    },
    "flow_volume_guidance": {
      "page_views": "high; static/SSR + CDN",
      "checkout": "hundreds per minute within typical limits",
      "webhooks": "proportional to sales; 10-1000/day trivial",
      "dashboard": "low frequency"
    },
    "conclusion": "Stack handles moderate to high load (thousands of page views/day, hundreds of purchases/day) without architectural change.",
    "bottlenecks_to_watch": [
      "Supabase connection pooling at scale",
      "Unique constraint on purchases.session_id for idempotency",
      "Index on purchased_at for dashboard queries"
    ]
  },
  "references": {
    "legal": "docs/LEGAL_CHECKLIST.md",
    "compliance": "docs/COMPLIANCE_CHECKLIST.md",
    "data_processing_code": "apps/web/lib/compliance.ts",
    "launch_spec": "APEXORCA_v1_Launch_Spec.md"
  }
}
